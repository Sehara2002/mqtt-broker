[Unit]
Description=My Python MQTT Broker
After=network.target

[Service]
WorkingDirectory=/opt/my-mqtt-broker
ExecStart=/opt/my-mqtt-broker/.venv/bin/python /opt/my-mqtt-broker/run.py
Restart=always
RestartSec=2
Environment=MQTT_HOST=0.0.0.0
Environment=MQTT_PORT=1883
Environment=HTTP_HOST=0.0.0.0
Environment=HTTP_PORT=8080
Environment=LOG_PACKET_TIMES=0

[Install]
WantedBy=multi-user.target